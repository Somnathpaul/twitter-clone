
<% @tweets.each do |t|%> 
 <div class="column is-half">
   <div class="box">
     <article class="media">
       <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/128x128.png">
          </figure>
       </div>

       <div class="media-content">
         <div class="content">
           <strong style="color: rgb(255, 255, 255)">Somnath paul</strong> <br>
           <small style="color: rgb(133, 150, 163)">@somnath.geek</small><br>
           <p style="color: rgb(239, 244, 247)"> <%= t.tweet%> </p>
         </div>
         		<div class="panel-block">
			        <div class="level is-mobile">
			        	<div class="level-item has-centered-text">

                <div>
                  <%= link_to t, class: "level-item" do %> 
                   <span class="icon"><i class="fas fa-arrow-up" area-hidden="true"></i></span>
                  <% end %>
                  <p style="color: rgb(133, 150, 163)">2K</p>
                </div>

                <div>
                  <%= link_to t, class: "level-item" do %> 
                   <span class="icon"><i class="far fa-comment" area-hidden="true"></i></span>
                  <% end %>
                  <p style="color: rgb(133, 150, 163)">56</p>
                </div>

                <div>
                 <%= link_to edit_tweet_path(t), class: "level-item" do %> 
                  <span class="icon"><i class="fas fa-retweet" area-hidden="true"></i></span>
                  <% end %>
                  <p style="color: rgb(133, 150, 163)">0</p>
                </div>
                
                <div class="media-right">
                  <%= link_to t, method: :delete, data: {confirm: "Are you sure you want to delete this tweet ?"} do %> 
                   <span class="icon"><i class="far fa-trash-alt" area-hidden="true"></i></span>
                  <% end %>
                </div>

               </div>
              </div>
            </div>
        </div>
     </article>
   </div>
  </div>
<% end %>


